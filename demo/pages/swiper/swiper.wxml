<swiper indicator-dots="{{indicatorDots}}" circular="{{circular}}"
  autoplay="{{autoPlay}}" interval="{{interval}}" duration="{{duration}}">
  <block wx:for="{{imgUrls}}">
    <swiper-item>
      <image src="{{item}}" class="slide-image" mode="widthFix"/>
    </swiper-item>
  </block>
</swiper>

<button bindtap="changeIndicatorDots"> indicator-dots </button>
<button bindtap="changeAutoPlay"> autoplay </button>
<slider bindchange="intervalChange" show-value min="500" max="10000"/> interval
<slider bindchange="durationChange" show-value min="1000" max="10000"/> duration
<view>
    <image style="width: 100%;" mode="widthFix" src="http://img06.tooopen.com/images/20160818/tooopen_sy_175833047715.jpg"/>
</view>